<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:padding="16dp"
>
    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="14dp"
        android:weightSum="3"
        android:layout_toRightOf="@+id/imgCard"
        android:layout_below="@+id/tvLevel"
        android:layout_centerInParent="true"
    >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
        >
            <TextView
                android:id="@+id/tvTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="22dp"
                android:textColor="@color/White"
                android:text="@string/target"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_toRightOf="@+id/tvTarget"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/ts00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:layout_toRightOf="@+id/tvTarget"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/ts10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:layout_toRightOf="@+id/tvTarget"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/ts20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/ts22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
        >
            <TextView
                android:id="@+id/tvMovements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="22dp"
                android:textColor="@color/White"
                android:text="@string/movement"
            />
            <ImageView
                android:id="@+id/imgHand"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/handempty"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
            >
                <LinearLayout
                    android:id="@+id/s0"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:padding="4dp"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/s00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/s1"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:padding="4dp"
                    android:layout_toRightOf="@+id/tvTarget"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/s10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/s2"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:padding="4dp"
                    android:weightSum="3"
                    android:layout_toRightOf="@+id/tvTarget"
                    android:background="#f0e0e0e0"
                >
                    <ImageView
                        android:id="@+id/s20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                    <ImageView
                        android:id="@+id/s22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/pegvoid"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/ivFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/green_tick"
        android:visibility="invisible"
    />
</RelativeLayout>